<div class="post">
	<div class = "upvote-container">
		<% if user_signed_in? %>
			<%= link_to raw("<i class='icon-chevron-up'></i>"), upvote_path(post), :remote => "true", "data-type" => :json, :class => "upvote", :method => :post %>
		<% else %>
			<%= link_to raw("<i class='icon-circle-arrow-up'></i>"), new_user_session_path %>
		<% end %>
	</div>
	<div class="votes">
		<p class="vote-count"><%= pluralize post.reputation_for(:votes).to_i, "vote" %></p>
	</div>
	<h6><%= link_to post.title, post %></h6>
</div>